<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.order(:name).each do |city| %>
      <tr>
        <td><%= link_to city.name, city %></td>
        <% if (user_signed_in?) && (can? [:update, :destroy], city) %>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if (user_signed_in?) && (can? :create, City.new) %>
<%= link_to 'New City', new_city_path %>
<% end %>

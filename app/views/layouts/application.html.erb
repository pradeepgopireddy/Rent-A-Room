<!DOCTYPE html>
<html>
  <head>
    <title>RentARoom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script src="/javascripts/jquery.growl.js" type="text/javascript"></script>
    <script src="/javascripts/jquery-ui.js" type="text/javascript"></script>
    <script src= "/javascripts/chosen.jquery.js" type="text/javascript"></script>

    <link href="/stylesheets/jquery.growl.css" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/jquery-ui.css" rel="stylesheet" type="text/css" >
    <link href="/stylesheets/chosen.css" rel="stylesheet" type="text/css" >
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  </head>

  <body>
  <b><%= link_to "Rooms", rooms_path %></b> | <b><%= link_to "Cities", cities_path %></b> 
  <% if (user_signed_in?) && (current_user.role? "host") %>
   | <%= link_to "My Rooms", rooms_my_rooms_path %> | <%= link_to "Unconfirmed Bookings", bookings_unconfirmed_bookings_path %>
  <% end %>
  <% if (user_signed_in?) && (current_user.role? "admin") %>
   <b>| <%= link_to "Amenities", amenities_path %></b> | <b><%= link_to "Unauthorized rooms", rooms_unauthorized_rooms_path %></b>
  <% end %>
  <% if user_signed_in? %>
  	<b>welcome! <%= current_user.username %> Role: <%= current_user.role.name %></b>
    <b><%= link_to "My Bookings", bookings_path %></b> |
  	<%= link_to "Account Setting", edit_user_registration_path %> |
  	<%= link_to "Logout", destroy_user_session_path, method: :delete %>
  <% else %>
  	<%= link_to "Register", new_user_registration_path %> |
  	<%= link_to "Sign in", new_user_session_path %>
  <% end %>
  <%= alert %>
  <%= notice %>
    <%= yield %>
  </body>
</html>

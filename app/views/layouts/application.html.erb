<!DOCTYPE html>
<html>
  <head>
    <title>RentARoom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= link_to "Rooms", rooms_path %> | <%= link_to "Cities", cities_path %> 
  <% if (user_signed_in?) && (can? :create, Amenity.new) %>
  | <%= link_to "Amenities", amenities_path %>
  <% end %>
  <% if (user_signed_in?) && (current_user.role? "host") %>
   | <%= link_to "My Rooms", rooms_my_rooms_path %> | <%= link_to "Unconfirmed Bookings", bookings_unconfirmed_bookings_path %>
  <% end %>
  <% if (user_signed_in?) && (current_user.role? "admin") %>
   | <%= link_to "Unauthorized rooms", rooms_unauthorized_rooms_path %>
  <% end %>
  <% if user_signed_in? %>
  	welcome! <%= current_user.username %> <%= current_user.role.name %>
    <%= link_to "My Bookings", bookings_path %> |
  	<%= link_to "Account Setting", edit_user_registration_path %> |
  	<%= link_to "Logout", destroy_user_session_path, method: :delete %>
  <% else %>
  	<%= link_to "Register", new_user_registration_path %> |
  	<%= link_to "Sign in", new_user_session_path %>
  <% end %>
  <%= alert %>
  <%= notice %>
    <%= yield %>
  </body>
</html>
